# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration (Vercel Prisma Postgres + Accelerate)
DATABASE_URL=postgres://user:password@host:5432/database?sslmode=require
POSTGRES_URL=postgres://user:password@host:5432/database?sslmode=require
PRISMA_DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=your_api_key_here
PRISMA_CLIENT_ENGINE_TYPE=dataproxy

# Redis Configuration
REDIS_URL=rediss://default:your_redis_password@your-redis-host.upstash.io:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_use_a_long_random_string
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_use_a_long_random_string

# GCP Cloud Storage Configuration (optional for development)
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=

# Scheduled Jobs Configuration
BILL_GENERATION_SCHEDULE=0 0 1 * *

# CORS Configuration
CORS_ORIGIN=https://your-frontend-url.com,http://localhost:5173

# App Configuration
KAS_KELAS_AMOUNT=10000
USE_LOCAL_CRON=true
CRON_SECRET_KEY=your-cron-secret-key
