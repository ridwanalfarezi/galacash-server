# ===================================
# DEVELOPMENT ENVIRONMENT
# ===================================

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database Configuration (Local Docker)
DATABASE_URL=postgresql://galacash:galacash123@127.0.0.1:5433/galacash_db

# Redis Configuration (Local Docker)
REDIS_URL=redis://localhost:6379

# JWT Configuration (Development keys - NOT secure for production)
JWT_SECRET=dev-secret-key-please-change-in-production-abcd1234
JWT_REFRESH_SECRET=dev-refresh-secret-key-please-change-in-production-xyz9876

# GCP Cloud Storage Configuration (Optional for local dev)
# Leave empty to disable file uploads during development
GCP_PROJECT_ID=
GCP_BUCKET_NAME=galacash-dev-bucket
GOOGLE_APPLICATION_CREDENTIALS=

# Scheduled Jobs Configuration
# Runs at midnight on the 1st of every month
BILL_GENERATION_SCHEDULE=0 0 1 * *

# CORS Configuration (Allow all origins in dev)
CORS_ORIGIN=*
